<tbody class="bg-white divide-y divide-gray-300">
  <div id="<%= dom_id person %>">
    <tr class="whitespace-nowrap">
      <td class="px-6 py-4 text-sm "><%= person.name %></td>
      <td class="px-6 py-4 text-gray-500"><%= person.kind_document %></td>
      <td class="px-6 py-4 text-gray-500"><%= person.document %></td>
      <td class="px-6 py-4 text-gray-500"><%= person.email %></td>
      <td>
        <% if action_name != "show" %>
          <%= link_to "Show", person, class: "bg-transparent hover:bg-blue-600 text-blue-700 hover:text-white py-2 px-4 hover:border-transparent rounded font-light rounded-full" %>
        <% end %>
      </td>
      <td>
        <% if action_name != "show" %>
          <%= link_to 'Edit', edit_person_path(person), class: "bg-transparent hover:bg-green-600 text-green-700 hover:text-white py-2 px-4 hover:border-transparent rounded font-light rounded-full" %>
        <% end %>
      </td>
    </tr>
  </div>
</tbody>
