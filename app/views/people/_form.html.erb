  <% if person.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
        <% person.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= simple_form_for person, defaults: { input_html: { class: 'form w-full max-w-lg' } } do |f| %>
  <div class="flex flex-wrap -mx-3 mb-6 px-3 py-7">
    <div class="w-full px-3">
      <%= f.input :name,
                  placeholder: 'Nome do requerente',
                  input_html: {
                    class: 'w-full text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white'
                  }
      %>
    </div>

    <div class="w-full md:w-1/2 px-3">
      <%= f.input :document, placeholder: 'Numero do CPF OU CNPJ', input_html: { maxlength: 15 } %>
    </div>

    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-3">
      <%= f.input :kind_document,
                  collection: [:cpf, :cnpj],
                  selected: :cpf,
                  input_html: {
                    class: 'block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline'
                  }
      %>
    </div>

    <div class="w-full md:w-1/2 px-3">
      <%= f.input :email,
                  placeholder: 'user@domain.com',
                  input_html: {
                    class: 'lowercase block w-full border rounded py-3 px-3 mb-3'
                  }
      %>
   </div>


    <%#= content_for?(:addresses) ? yield(:addresses) : yield %>
    <%= form_with(model: @address, class: "form max-w-lg") do |form_address| %>
    <#%= form_for @address do |form_address| % %>
        <div class="w-full w-1/2 px-3">
          <%= form_address.label :postcode %>
          <%= form_address.text_field :postcode, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
        </div>

        <div class="w-full px-3">
          <%= form_address.label :street %>
          <%= form_address.text_field :street, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
        </div>

        <div class="w-1/2 px-3">
          <%= form_address.label :number %>
          <%= form_address.text_field :number, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
        </div>

        <div class="w-1/2 px-3">
          <%= form_address.label :complement %>
          <%= form_address.text_field :complement, class: "lowercase block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
        </div>

        <div class="w-1/2 px-3">
          <%= form_address.label :neighborhood %>
          <%= form_address.text_field :neighborhood, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
        </div>

        <div class="w-1/2 px-3">
          <%= form_address.label :city %>
          <%= form_address.text_field :city, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
        </div>

        <div class="w-1/2 px-3">
          <%= form_address.label :state %>
          <%= collection_select(
              :post,
              :state,
              State.list,
              :itself,
              :itself,
              { include_blank: false },
              { class: "appearance-none block w-full px-3 py-1.5 text-base font-normal bg-white bg-clip-padding bg-no-repeat border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" }
            )
          %>
        </div>
      </div>
    <% end %>

    <div class="w-full">
      <%= f.submit class: 'ui teal button py-8' %>
    </div>
  </div>
<% end %>
