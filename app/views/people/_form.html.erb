  <% if person.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
        <% person.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= simple_form_for person, defaults: { input_html: { class: 'form w-full max-w-lg' } } do |f| %>
  <div class="flex flex-wrap -mx-3 mb-6 px-3">
    <div class="w-full">
      <%= f.input :name,
                  placeholder: 'Nome do requerente',
                  input_html: {
                    class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white'
                  }
      %>
    </div>

    <div class="w-full md:w-1/2 px-3">
      <%= f.input :document, placeholder: 'Numero do CPF OU CNPJ', input_html: { maxlength: 15 } %>
    </div>

    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-3">
      <%= f.input :kind_document,
                  collection: [:cpf, :cnpj],
                  selected: :cpf,
                  input_html: {
                    class: 'block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline'
                  }
      %>
    </div>

    <div class="w-full md:w-1/2 px-3">
      <%= f.input :email,
                  placeholder: 'user@domain.com',
                  input_html: {
                    class: 'lowercase block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white'
                  }
      %>
   </div>

    <div class="w-full">
      <%#= f.button :submit %>
      <%= f.submit class: 'ui teal button' %>
    </div>
  </div>
<% end %>
