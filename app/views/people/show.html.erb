<%= turbo_frame_tag 'searh_people' do %>
  <div>
    <div class="flex flex-row-reverse text-xs text-slate-600">
      <%= @person.user.name || @person.user.email %>
      <strong class="font-sans font-light ">Cadastrado por:  </strong>
    </div>

    <div class="px-8 py-2">
      <h3 class="font-light text-2xl text-cyan-800"><%= @person.name %></h3>
    </div>
    <hr>
    <div class="px-2 py-1 flex space-x-2 ">
      <div class="px-8 py-7">
        <strong class="font-sans inline font-light mb-4"></strong><%= @person.kind_document.upcase %>
        <strong class="font-sans inline font-light mb-2"> - </strong><%= @person.document %>
        <strong class="font-sans block font-light mb-1 py-5">Email:</strong><%= @person.email %>
      </div>

      <h3 class="font-light text-2xl px-8 py-7"></h3>
      <div class="px-8 py-7">
        <div class="px-6 pt-4 pb-2">
          <strong class="font-sans inline font-light mb-2">Rua:  </strong><%= @person.street %>
        </div>

        <div class="px-6 pt-4 pb-2">
          <strong class="font-sans inline font-light mb-2">Numero: </strong><%= @person.number %>
        </div>

        <div class="px-6 pt-4 pb-2">
          <strong class="font-sans inline font-light mb-2">Bairro: </strong><%= @person.neighborhood %>
        </div>

        <div class="px-6 pt-4 pb-2">
          <strong class="font-sans inline font-light mb-2">Complemento: </strong><%= @person.complement %>
        </div>

        <div class="px-6 pt-4 pb-2">
          <strong class="font-sans inline font-light mb-2">Cidade: </strong><%= @person.city %>
        </div>

        <div class="px-6 pt-4 pb-2">
          <strong class="font-sans inline font-light mb-2">Estado: </strong><%= @person.state %>
        </div>
      </div>
    </div>
  </div>

  <%= render "actions", person: @person %>
<% end %>
