<div>
  <h1 class="font-light text-2xl pb-8 text-teal-800">Log in</h1>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: {
                    autocomplete: "E-mail",
                    class: "peer form-input px-4 py-3 rounded-ful"
                  }
      %>

      <%= f.input :password,
                  required: false,
                  input_html: {
                    autocomplete: "Senha",
                    class: "peer form-input px-4 py-3 rounded-ful"
                  }
      %>

      <%= f.input :remember_me, as: :boolean,
                  input_html: {
                    class: "rounded text-teal-500"
                  }if devise_mapping.rememberable?
      %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", data: { turbo: false } %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>


